{
    "name": "enxame",
    "version": "0.0.8",
    "description": "",
    "keywords": [],
    "license": "ISC",
    "author": "",
    "main": "./lib/enxame.js",
    "types": "./lib/enxame.d.ts",
    "bin": {
        "enxame": "./lib/cli.js"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "npm run build:types && npm run build:js",
        "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
        "build:types": "tsc --emitDeclarationOnly",
        "dev:deploy": "npm run build && node lib/cli deploy -x virtual-cluster -s test-enxame -c ./src/examples/wordpress.ts",
        "dev:render": "npm run build && node lib/cli render -c ./src/examples/wordpress.ts -o ./src/examples/wordpress.compose",
        "prepublish": "npm run build",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "dependencies": {
        "execa": "^4.0.3",
        "md5": "^2.3.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2",
        "yaml": "^1.10.0",
        "yargs": "^15.4.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.11.4",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/preset-env": "^7.11.0",
        "@babel/preset-typescript": "^7.10.4",
        "@types/md5": "^2.2.0",
        "@types/node": "^14.6.2",
        "@types/yargs": "^15.0.5",
        "axios": "^0.20.0",
        "json-schema-to-typescript": "^9.1.1"
    }
}
